---
const { title = "RedGate-IT", description = "Managed IT for modern small businesses." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-black text-white antialiased">
    <div class="pointer-events-none fixed inset-0 -z-10">
      <!-- subtle background glow -->
      <div class="absolute -top-24 left-1/2 h-[500px] w-[900px] -translate-x-1/2 rounded-full bg-red-600/10 blur-3xl"></div>
      <div class="absolute bottom-0 left-0 h-[380px] w-[380px] rounded-full bg-white/5 blur-3xl"></div>
    </div>

    <slot />
  </body>
</html>
